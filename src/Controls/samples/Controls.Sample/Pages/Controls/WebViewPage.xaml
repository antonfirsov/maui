<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.WebViewPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="WebView">
    <views:BasePage.Content>
        <ScrollView>
            <VerticalStackLayout    
                Margin="12">
                <Label
                    Text="UrlWebViewSource"
                    Style="{StaticResource Headline}"/>
                <WebView 
                    x:Name="MauiWebView"
                    Source="https://github.com/dotnet/maui"
                    HeightRequest="300"
                    HorizontalOptions="FillAndExpand" />
                <Label
                    Text="Go Back"
                    Style="{StaticResource Headline}"/>
                <Button
                    Text="GoBack"
                    Clicked="OnGoBackClicked"/>
                <Label
                    Text="Go Forward"
                    Style="{StaticResource Headline}"/>
                <Button
                    Text="GoForward"
                    Clicked="OnGoForwardClicked"/>
                <Label
                    Text="Reload"
                    Style="{StaticResource Headline}"/>
                <Button
                    Text="Reload"
                    Clicked="OnReloadClicked"/>
                <Label
                    Text="Eval Script"
                    Style="{StaticResource Headline}"/>
                <Button
                    Text="Eval"
                    Clicked="OnEvalClicked"/>
				<Label
                    Text="Eval Script (async)"
                    Style="{StaticResource Headline}"/>
                <Button
                    Text="Eval Async"
                    Clicked="OnEvalAsyncClicked"/>
				<Label
					x:Name="EvalResultLabel"
                    Text="..."
                    Style="{StaticResource Headline}"/>
            </VerticalStackLayout>
        </ScrollView>
    </views:BasePage.Content>
</views:BasePage>
